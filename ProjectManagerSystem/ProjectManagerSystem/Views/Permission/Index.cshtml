@model IEnumerable<ProjectManagerSystem.Models.PermissionViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CanCreate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CanRead)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CanUpdate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CanDelete)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CanCreate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CanRead)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CanUpdate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CanDelete)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
