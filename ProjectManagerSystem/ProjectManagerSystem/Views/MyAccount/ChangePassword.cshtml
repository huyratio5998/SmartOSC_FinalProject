<!-- Modal -->
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
<div class="modal fade" id="exampleModal1" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">change password</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                
                <form role="form">


                    <div class="form-group" id="oldpass">
                        <label for="txtName">Old Password:</label>
                        <input type="password" class="form-control" name="txtOldPassword" id="txtOldPassword2">
                    </div>
                    <div class="form-group" id="newpass">
                        <label for="txtName">Password New:</label>
                        <input type="password" class="form-control" name="txtPasswordNew" id="txtPasswordNew">
                    </div>
                    <div class="form-group" id="confirmpass">
                        <label for="txtName">Confirm Password:</label>
                        <input type="password" class="form-control" name="txtConfirmPassword" id="txtConfirmPassword">
                    </div>
                    
                </form>
                
            </div>
            <div class="modal-footer">
                <button type="button" id="ChangePass" class="btn btn-success">Save</button>
                <button type="button" id="btnCancel" data-dismiss="modal" class="btn btn-warning">Close</button>
            </div>
        </div>
    </div>
</div>
