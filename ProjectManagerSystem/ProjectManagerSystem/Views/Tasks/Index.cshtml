@model ProjectManagerSystem.Models.CustomTasksViewModels.CustomTasksViewModels


    @{
        ViewBag.Title = "Index";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/datatables.min.css" rel="stylesheet" />
    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#TaskTable').DataTable();
        })
    </script>

    @using (Html.BeginForm("Index", "Task", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4>Task View</h4>
        <hr />

        <div class="form-group">
            @*@Html.LabelFor(m => m.ProjectName, new { @class = "col-md-2 control-label" })*@
            <div class="col-md-10">
                @Html.DropDownList("Id", (IEnumerable<SelectListItem>)ViewBag.listProject, "---Choose Project---", new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @*@Html.LabelFor(m => m.AssigneeName, new { @class = "col-md-2 control-label" })*@
            <div class="col-md-10">
                @Html.DropDownList("Id", (IEnumerable<SelectListItem>)ViewBag.listAssignee, "---Choose Assignee---", new { @class = "form-control" })
            </div>
        </div>

        <table id="TaskTable" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>TaskId</th>
                    <th>Task Name</th>
                    <th>Assignee</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody></tbody>
            <tfoot>
                <tr>
                    <th>TaskId</th>
                    <th>Task Name</th>
                    <th>Assignee</th>
                    <th>Status</th>
                </tr>
            </tfoot>

        </table>
    }

